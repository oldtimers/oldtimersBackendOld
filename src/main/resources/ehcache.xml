<config
        xmlns="http://www.ehcache.org/v3"
>

    <cache alias="userPrivileges">
        <expiry>
            <ttl unit="minutes">100</ttl>
        </expiry>
        <resources>
            <heap>100</heap>
        </resources>
    </cache>

    <cache alias="user">
        <key-type>java.lang.String</key-type>
        <resources>
            <heap>100</heap>
        </resources>
    </cache>

    <cache alias="eventsId">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Integer</value-type>
        <resources>
            <heap>1000</heap>
        </resources>
    </cache>

    <cache alias="eventsByUrl">
        <key-type>java.lang.String</key-type>
        <listeners>
            <listener>
                <class>pl.pazurkiewicz.oldtimers_rally.utils.InitializeEvent</class>
                <event-firing-mode>SYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>ORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>UPDATED</events-to-fire-on>
            </listener>
            <listener>
                <class>pl.pazurkiewicz.oldtimers_rally.utils.CacheEventLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
            </listener>
        </listeners>
        <resources>
            <heap>20</heap>
        </resources>
    </cache>

    <cache alias="pl.pazurkiewicz.oldtimers_rally.model.Language">
        <listeners>
            <listener>
                <class>pl.pazurkiewicz.oldtimers_rally.utils.CacheEventLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
                <events-to-fire-on>REMOVED</events-to-fire-on>
            </listener>
        </listeners>
        <heap>10</heap>
    </cache>

    <cache alias="pl.pazurkiewicz.oldtimers_rally.model.EventLanguage">
        <listeners>
            <listener>
                <class>pl.pazurkiewicz.oldtimers_rally.utils.CacheEventLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
            </listener>
        </listeners>
        <heap>100</heap>
    </cache>

</config>
