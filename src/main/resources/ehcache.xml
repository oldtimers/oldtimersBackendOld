<config
        xmlns="http://www.ehcache.org/v3"
        xmlns:jcache="http://www.ehcache.org/v3/jsr107">

    <cache alias="userPrivileges">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap>100</heap>
        </resources>

    </cache>

    <cache alias="eventsId">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Integer</value-type>
        <resources>
            <heap>1000</heap>
        </resources>
    </cache>

    <cache alias="eventsByUrl">
        <key-type>java.lang.String</key-type>
        <expiry>
            <ttl unit="days">1</ttl>
        </expiry>
        <listeners>
            <listener>
                <class>pl.pazurkiewicz.oldtimers_rally.CacheEventLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
            </listener>
        </listeners>
        <resources>
            <heap>20</heap>
        </resources>

    </cache>

    <cache alias="pl.pazurkiewicz.oldtimers_rally.model.Language">
        <listeners>
            <listener>
                <class>pl.pazurkiewicz.oldtimers_rally.CacheEventLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
            </listener>
        </listeners>
        <heap>100</heap>
    </cache>

    <cache alias="pl.pazurkiewicz.oldtimers_rally.model.EventLanguage">
        <listeners>
            <listener>
                <class>pl.pazurkiewicz.oldtimers_rally.CacheEventLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
            </listener>
        </listeners>

        <heap>100</heap>
    </cache>


</config>
